<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:orientation="vertical" >

    <!-- 论坛板块 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dip"
            android:paddingTop="20dip" >

            <ImageView
                android:id="@+id/iv_item_bbs_plate_icon"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
            <!-- 板块名，介绍 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_item_bbs_plate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_mian"
                    android:textSize="@dimen/txt_size_20" />

                <TextView
                    android:id="@+id/tv_item_bbs_plate_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:lines="3"
                    android:paddingRight="10dip"
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_15" />
            </LinearLayout>
        </LinearLayout>
        <!-- 板块标签(hot，new) -->

        <ImageView
            android:id="@+id/iv_item_bbs_plate_tag"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>