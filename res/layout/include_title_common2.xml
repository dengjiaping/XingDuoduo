<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dip"
    android:background="@color/color_mian"
    android:gravity="center_vertical" >

    <!-- 通用标题栏2(右侧文字) -->
    <Button
        android:id="@+id/btn_common_back2"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_margin="5dip"
        android:background="@drawable/bg_btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_common_title2"
            style="@style/txt_style_base1"
            android:text="@string/collection_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/txt_size_18" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_common_right2"
        android:layout_width="40dip"
        android:layout_height="36dip"
        android:layout_alignParentRight="true"
        android:layout_margin="5dip"
        android:text="@string/collection_title_right_n"
        android:textColor="@color/color_white"
        android:textSize="@dimen/txt_size_15"
        android:background="@null" />

</RelativeLayout>