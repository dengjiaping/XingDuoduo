                    <!-- 热销产品专区 -->

                    <include layout="@layout/line_match" />

                    <ImageView
                        android:id="@+id/iv_center_7_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/bg_center_7_top"
                        android:clickable="true"
                        android:scaleType="matrix" />
                    <!-- 具体产品 -->

                    <include layout="@layout/line_match" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <!-- 热卖产品左下 -->

                        <RelativeLayout
                            android:id="@+id/rlyt_center_7_left_bottom"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_center_7_left_bottom"
                            android:clickable="true"
                            android:orientation="vertical" >

                            <!-- 图片 -->

                            <ImageView
                                android:id="@+id/iv_center_7_left_bottom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:background="@drawable/bg_center_7_left_bottom"
                                android:scaleType="fitXY" />
                        </RelativeLayout>

                        <include layout="@layout/line_match_v" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <!-- 热卖产品右下上 -->

                            <RelativeLayout
                                android:id="@+id/rlyt_center_7_right_top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_center_7_right_top"
                                android:clickable="true"
                                android:orientation="vertical" >

                                <!-- 图片 -->

                                <ImageView
                                    android:id="@+id/iv_center_7_right_top"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/bg_center_7_right_top"
                                    android:scaleType="fitXY" />
                            </RelativeLayout>

                            <include layout="@layout/line_match" />
                            <!-- 热卖产品右下下 -->

                            <RelativeLayout
                                android:id="@+id/rlyt_center_7_right_bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_center_7_right_bottom"
                                android:clickable="true"
                                android:orientation="vertical" >

                                <!-- 图片 -->

                                <ImageView
                                    android:id="@+id/iv_center_7_right_bottom"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/bg_center_7_right_bottom"
                                    android:scaleType="fitXY" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.xiuman.xingduoduo.view.PullScrollView>
    </RelativeLayout>

