<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dip"
    android:background="@color/color_mian"
    android:orientation="vertical" >

    <!-- 交流板块标题栏 -->

    <Button
        android:id="@+id/btn_bbs_back"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_margin="5dip"
        android:background="@drawable/bg_btn_back" />


        <TextView
            android:id="@+id/tv_bbs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_receipt_address_manager"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/txt_size_18" />
    <Button
        android:id="@+id/btn_bbs_right"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_margin="5dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_post_host_n" />

</RelativeLayout>