<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/txt_style_base3"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <!-- 更换用户密码 -->

    <include layout="@layout/include_title_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/color_bg" />

    <include layout="@layout/line_match" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/et_input_register_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="原  密  码:"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_15" />

        <EditText
            android:id="@+id/et_update_user_psw_old"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/et_input_register_bg"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:hint="@string/update_psw_yuanshi"
            android:inputType="textPassword"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="5dip"
            android:textSize="@dimen/txt_size_15" />
    </LinearLayout>

    <include layout="@layout/line_match" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/color_bg" />

    <include layout="@layout/line_match" />

    <!-- 邮箱 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/et_input_register_bg"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="新  密  码:"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_15" />

        <EditText
            android:id="@+id/et_update_user_psw_new"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/et_input_register_bg"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:hint="@string/update_psw_psw"
            android:inputType="textPassword"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="5dip"
            android:textSize="@dimen/txt_size_15" />
    </LinearLayout>

    <include layout="@layout/line_match" />

    <!-- 密码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/et_input_register_bg"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认密码:"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_15" />

        <EditText
            android:id="@+id/et_update_user_psw_new2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/et_input_register_bg"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:hint="@string/update_psw_sure"
            android:inputType="textPassword"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingTop="5dip"
            android:textSize="@dimen/txt_size_15" />
    </LinearLayout>

    <include layout="@layout/line_match" />

    <Button
        android:id="@+id/btn_submit_update"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dip"
        android:background="@drawable/btn_color_selector"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/update_submit"
        android:textColor="@color/color_white"
        android:textSize="@dimen/txt_size_18" />

</LinearLayout>