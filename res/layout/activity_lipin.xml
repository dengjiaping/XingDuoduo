<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >
    <!-- 活动专区 -->
    
    <!-- 标题栏 -->

    <include layout="@layout/include_title_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 帖子列表 -->

        <com.xiuman.xingduoduo.view.pulltorefresh.PullToRefreshListView
            android:id="@+id/pulllv_lipin"
            android:layout_width="match_parent"
            android:divider="@drawable/drawable_transparent"
            android:layout_height="match_parent" />
        <!-- 网络连接错误 -->

        <include
            layout="@layout/network_error"
            android:visibility="invisible" />
        <!-- 暂无商品 -->

        <include
            layout="@layout/include_null_goods"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>
