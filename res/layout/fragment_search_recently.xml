<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/txt_style_base3"
    android:orientation="vertical" >

    <!-- 最近搜索 -->

    <ListView
        android:id="@+id/lv_search_recently"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListView_Normal"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>
	<!-- 搜索历史为空的时候显示的布局 -->
    <LinearLayout
        android:id="@+id/llyt_search_null"
        style="@style/txt_style_base3"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="invisible" >

        <ImageView
            style="@style/txt_style_base1"
            android:background="@drawable/pic_search_null" />

        <TextView
            style="@style/txt_style_base1"
            android:text="@string/search_null"
            android:textSize="@dimen/txt_size_15" />
    </LinearLayout>

</LinearLayout>