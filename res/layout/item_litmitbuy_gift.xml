<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whole_stroke_bg_selector"
    android:orientation="vertical" >

    <!-- 限时抢购 礼品item (lg-limitbuy&gift) -->

    <TextView
        android:id="@+id/tv_lg_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lg_name"
        android:gravity="left"
        android:paddingBottom="5dip"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:singleLine="true"
        android:textColor="@color/color_mian"
        android:textSize="@dimen/txt_size_20" />

    <TextView
        android:id="@+id/tv_lg_goods_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lg_description"
        android:paddingBottom="5dip"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/color_black3"
        android:textSize="@dimen/txt_size_14" />

    <ImageView
        android:layout_marginTop="5dip"
        android:id="@+id/iv_lg_goods_poster"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

</LinearLayout>