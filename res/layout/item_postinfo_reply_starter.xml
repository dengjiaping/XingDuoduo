<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dip" >

    <!-- 回复楼主的帖子item -->
    <!-- 头像 -->

    <ImageView
        android:id="@+id/iv_item_postinfo_reply_head"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/bg_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <!-- 用户名 -->

                <TextView
                    android:id="@+id/tv_item_postinfo_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dip"
                    android:textColor="@color/color_black2"
                    android:textSize="@dimen/txt_size_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <!-- 楼层 -->

                    <TextView
                        android:id="@+id/tv_item_postinfo_reply_floor "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black3"
                        android:textSize="@dimen/txt_size_12" />
                    <!-- 发表时间 -->

                    <TextView
                        android:id="@+id/tv_item_postinfo_reply_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dip"
                        android:textColor="@color/color_black3"
                        android:textSize="@dimen/txt_size_12" />
                </LinearLayout>
            </LinearLayout>
            <!-- 回复按钮 -->

            <Button
                android:id="@+id/btn_item_postinfo_starter_reply"
                android:layout_width="40dip"
                android:layout_height="25dip"
                android:background="@drawable/bg_reply"
                android:focusable="false" />
        </LinearLayout>
        <!-- 回复内容 -->

        <TextView
            android:id="@+id/tv_item_postinfo_reply_content "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/txt_size_14" />
        <!-- 楼层回复 -->

        <LinearLayout
            android:id="@+id/llyt_item_postinfo_starter_reply_floor_container"
            android:layout_width="match_parent"
            android:paddingLeft="10dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/line_match_drawable" />
            <!-- 回复楼层1 -->

            <LinearLayout
                android:id="@+id/llyt_item_postinfo_starter_reply_floor_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <!-- 回复楼层 -->

                <TextView
                    android:id="@+id/tv_item_replyinfo_reply_floor_username1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_14" />
                <!-- 楼主标记 -->

                <ImageView
                    android:id="@+id/iv_item_replyinfo_reply_floor_starter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_14" />
                <!-- 回复内容 -->

                <TextView
                    android:id="@+id/tv_item_replyinfo_reply_floor_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_14" />
                <!-- 时间 -->

                <TextView
                    android:id="@+id/tv_item_replyinfo_reply_floor_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <include layout="@layout/line_match_drawable" />
            <!-- 回复楼层2 -->

            <LinearLayout
                android:id="@+id/llyt_item_postinfo_starter_reply_floor_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <!-- 回复楼层 -->

                <TextView
                    android:id="@+id/tv_item_replyinfo_reply_floor_username2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_14" />
                <!-- 楼主标记 -->

                <ImageView
                    android:id="@+id/iv_item_replyinfo_reply_floor_starter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_14" />
                <!-- 回复内容 -->

                <TextView
                    android:id="@+id/tv_item_replyinfo_reply_floor_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_14" />
                <!-- 时间 -->

                <TextView
                    android:id="@+id/tv_item_replyinfo_reply_floor_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/color_black3"
                    android:textSize="@dimen/txt_size_12" />
            </LinearLayout>

            <include layout="@layout/line_match_drawable" />
            <!-- 加载更多 -->

            <RelativeLayout
                android:id="@+id/rlyt_item_postinfo_starter_reply_floor_loadmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <!-- 加载更多回复 -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/txt_size_14" />

                    <TextView
                        android:id="@+id/tv_load_more_reply_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/txt_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条回复..."
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/txt_size_14" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>