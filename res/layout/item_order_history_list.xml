<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_item_order_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whole_bg_normal_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <!-- 我的订单历史(item) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- 订单号 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="@string/order_history_id"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/txt_size_14" />

        <TextView
            android:id="@+id/tv_item_order_history_order_id"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/txt_size_14" />
        <!-- 订单状态 -->

        <TextView
            android:id="@+id/tv_item_order_history_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="@color/color_red"
            android:textSize="@dimen/txt_size_14" />
    </LinearLayout>

    <include layout="@layout/line_match" />
    <!-- 商品列表 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.xiuman.xingduoduo.view.MyListView
            android:id="@+id/lv_item_order_history_goods_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:clickable="false"
            android:divider="@color/color_black_line"
            android:dividerHeight="0.2dip"
            android:fadingEdge="none"
            android:focusable="false"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />
    </LinearLayout>

    <include layout="@layout/line_match" />
    <!-- 订单总价，数量 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="共"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/txt_size_14" />

        <TextView
            android:id="@+id/tv_item_order_history_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/txt_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="件商品  总计："
            android:textColor="@color/color_black3"
            android:textSize="@dimen/txt_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="￥"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_order_history_goods_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_14"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/line_match" />
    <!-- 删除订单，查物流，确认收货(评价订单) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false" />
        <!-- 删除订单 -->

        <Button
            android:id="@+id/btn_item_order_history_delete_order"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/whole_stroke_bg_selector"
            android:focusable="false"
            android:padding="5dip"
            android:text="@string/order_history_delete"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_15" />
        <!-- 查看物流 -->

        <Button
            android:id="@+id/btn_item_order_history_logistics_order"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/whole_stroke_bg_selector"
            android:focusable="false"
            android:padding="5dip"
            android:text="@string/order_history_logistics"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_15" />

        <Button
            android:id="@+id/btn_item_order_history_take_order"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/whole_stroke_bg_selector"
            android:focusable="false"
            android:padding="5dip"
            android:text="@string/order_history_take"
            android:textColor="@color/color_black2"
            android:textSize="@dimen/txt_size_15" />
    </LinearLayout>

</LinearLayout>