<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <!-- 我的帖子列表 -->

    <include layout="@layout/include_title_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.xiuman.xingduoduo.view.pulltorefresh.PullToRefreshListView
            android:id="@+id/pulllv_my_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/drawable_transparent"
            android:fastScrollEnabled="true" />

        <include
            layout="@layout/network_error"
            android:visibility="invisible" />
        <!-- 暂无帖子 -->

        <include
            layout="@layout/include_null_post"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>