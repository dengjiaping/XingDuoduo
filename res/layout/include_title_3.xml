<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dip"
    android:background="@color/color_mian"
    android:gravity="center_vertical" >

    <!-- 分类商品展示界面标题栏 -->

    <Button
        android:id="@+id/btn_back_3"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_margin="7dip"
        android:background="@drawable/bg_btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView 
            android:id="@+id/tv_classify_title_name"
            style="@style/txt_style_base1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/txt_size_18"
            android:text="@string/classify_title_name"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_alignParentRight="true"
        android:layout_margin="5dip"
        android:background="@drawable/bg_btn_fresh" />

</RelativeLayout>