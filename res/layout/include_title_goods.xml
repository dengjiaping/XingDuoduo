<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlyt_goodsinfo_title"
    android:layout_width="match_parent"
    android:layout_height="46dip"
    android:background="@color/color_mian"
    android:gravity="center_vertical" >

    <!-- 商品详情展示界面标题栏 -->

    <Button
        android:id="@+id/btn_back_goods"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_margin="5dip"
        android:background="@drawable/bg_btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_goods_title_name"
            style="@style/txt_style_base1"
            android:text="@string/good_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/txt_size_18" />
    </LinearLayout>

    <LinearLayout
        style="@style/txt_style_base1"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_goods_shopping_cart"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_margin="5dip"
            android:background="@drawable/bg_shoppingcart" />
    </LinearLayout>

</RelativeLayout>