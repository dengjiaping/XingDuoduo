<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 主页底部的按钮 -->
    <style name="main_tab_bottom">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 可侧滑结束的activity的主题样式 -->
    <style name="AppTheme.Transparent" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <!-- 全屏可侧滑结束activity主题样式 -->
    <style name="AppTheme.Transparent.FullScreen" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- ListView的样式 -->
    <style name="ListView_Normal">
        <item name="android:listSelector">@drawable/horizontal_mid_listview_bg_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:childDivider">@drawable/divider_horizontal_dark_opaque</item>
        <item name="android:divider">@drawable/divider_horizontal_dark_opaque</item>
        <item name="android:footerDividersEnabled">true</item>
    </style>

    <!-- 自定义Dialog的样式 -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 图案解锁按钮样式 -->
    <!-- 绿色 -->
    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_green</item>
    </style>
    <!-- 红色 -->
    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_red</item>
    </style>

    <!-- PopWindow动画 -->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
    <!-- PopWindow动画2 -->
    <style name="PopupAnimation2" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_set_in</item>
        <item name="android:windowExitAnimation">@anim/pop_set_out</item>
    </style>

    <!-- 评分条 -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <!-- ******************Text样式base***************** -->
    <style name="txt_style_base1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt_style_base2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="txt_style_base3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- ***************Base1**************** -->
    <!-- Text样式1(颜色一) -->
    <style name="txt_style_1" parent="txt_style_base1">
        <item name="android:textColor">@color/color_black</item>
    </style>
    <!-- Text样式2(颜色二) -->
    <style name="txt_style_2" parent="txt_style_base1">
        <item name="android:textColor">@color/color_black2</item>
    </style>
    <!-- Text样式3(颜色三) -->
    <style name="txt_style_3" parent="txt_style_base1">
        <item name="android:textColor">@color/color_black3</item>
    </style>

    <!-- ***************Base2**************** -->
    <!-- Text样式1(颜色一) -->
    <style name="txt_style_21" parent="txt_style_base2">
        <item name="android:textColor">@color/color_black</item>
    </style>
    <!-- Text样式2(颜色二) -->
    <style name="txt_style_22" parent="txt_style_base2">
        <item name="android:textColor">@color/color_black2</item>
    </style>
    <!-- Text样式3(颜色三) -->
    <style name="txt_style_23" parent="txt_style_base2">
        <item name="android:textColor">@color/color_black3</item>
    </style>

</resources>