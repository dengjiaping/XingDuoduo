<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 商品规格选择 -->
    <!-- 按下 -->
    <item android:state_checked="true"><shape>
            <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="3dip" />

            <gradient android:endColor="@color/color_mian" android:startColor="@color/color_mian" />
        </shape></item>
    <!-- 正常 -->
    <item><shape>
            <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="3dip" />

            <gradient android:endColor="@color/color_bg" android:startColor="@color/color_bg" />

            <stroke android:width="0.1dip" android:color="@color/color_black" />
        </shape></item>

</selector>