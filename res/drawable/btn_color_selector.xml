<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 背景颜色为主。。 -->
	<!-- 按下 -->
    <item android:state_pressed="true"><shape>
            <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="3dip" />


            <gradient android:endColor="@color/color_mian2" android:startColor="@color/color_mian2" />
        </shape></item>
    <!-- 正常 -->
    <item>
        <shape>
             <corners android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="3dip" />


            <gradient android:endColor="@color/color_mian3" android:startColor="@color/color_mian3" />
        </shape>
    </item>
    
</selector>
